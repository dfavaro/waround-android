<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Waround" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Waround.BottomSheetDialog</item>
    </style>

    <style name="Theme.Waround.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Waround.BottomSheetDialog.ModalStyle</item>
    </style>

    <style name="Theme.Waround.BottomSheetDialog.ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded_background</item>
    </style>

    <style name="Theme.Waround.BottomSheetDialog.NoBackground" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="bottomSheetStyle">@style/Theme.Waround.BottomSheetDialog.ModalStyle</item>
    </style>

</resources>